<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li>
    <%= form_with(model: @article, method: :delete, html: { style: "display:inline;" }) do |form| %>
      <%= form.submit "Destroy", style: "display: none;" %>
      <%= link_to "Destroy", "#", 
                  data: { confirm: "Are you sure?" }, 
                  onclick: "if(confirm('Are you sure?')) { this.closest('form').submit(); } return false;" %>
    <% end %>
  </li>
  <li><%= link_to "Back", root_path %></li>
</ul>